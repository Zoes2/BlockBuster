<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4>Cliente Información:</h4>
      <p><strong>#:</strong> <%= @client.id %></p>
      <p><strong>Nombre:</strong> <%= @client.name %></p>
      <p><strong>Edad:</strong> <%= @client.age %></p>
      <p><strong>Película:</strong> <%= @client.movies.last %></p>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-12 mt-3">
      <%= link_to "Editar Cliente", edit_client_path(@client), class: "btn btn-primary" %>
    </div>
    <div class="col-md-12 mt-3">
      <%= link_to "Volver al Menú", clients_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-12">
      <%= button_to "Eliminar Cliente", @client, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>

